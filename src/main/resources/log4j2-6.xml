<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender -->
        <RollingFile name="File" fileName="logs/user-search-api.log"
                     filePattern="logs/user-search-api-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Abstracted/Structured Log Appender Placeholder -->
        <!-- In a real production setup, you would configure an appender for Kafka, Azure Event Hub, etc. here -->
        <!-- For this example, we will just log to a separate structured file -->
        <RollingFile name="StructuredLogFile" fileName="logs/structured-events.log"
                     filePattern="logs/structured-events-%d{yyyy-MM-dd}-%i.log.gz">
            <JsonLayout complete="true" compact="true" eventEol="true" />
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>

        <!-- Application Specific Logger -->
        <Logger name="com.example.usersearch" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>

        <!-- Structured Logger -->
        <Logger name="com.example.usersearch.logging.structured" level="info" additivity="false">
             <AppenderRef ref="StructuredLogFile"/>
        </Logger>

        <!-- Suppress verbose Spring logs -->
        <Logger name="org.springframework" level="info"/>
        <Logger name="org.hibernate" level="warn"/>

    </Loggers>
</Configuration>
