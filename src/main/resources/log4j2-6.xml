<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <RollingFile name="RollingFile" fileName="logs/realtime-chat-stream-api.log"
                     filePattern="logs/realtime-chat-stream-api-%d{MM-dd-yyyy}-%i.log.gz">
            <JsonTemplateLayout eventTemplateUri="classpath:log4j2-json-template.json" />
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Abstracted appender for external systems like Kafka -->
        <KafkaAppender_RealTimeChatStreamAPI_1122 name="Kafka">
             <JsonTemplateLayout eventTemplateUri="classpath:log4j2-json-template.json" />
        </KafkaAppender_RealTimeChatStreamAPI_1122>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <!-- <AppenderRef ref="Kafka"/> -->
        </Root>

        <Logger name="com.mycompany.chatapp" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFile"/>
            <!-- <AppenderRef ref="Kafka"/> -->
        </Logger>

    </Loggers>
</Configuration>
