auth.jwt.secret=c2VjdXJlLWF1dGhlbnRpY2F0aW9uLXNlY3JldC1mb3ItamF2YS1hcGktZXhhbXBsZS12ZXJ5LWxvbmc=
auth.jwt.access-token-expiration-seconds=900 # 15 minutes
auth.jwt.refresh-token-expiration-days=30 # 30 days

# OTP Properties
auth.otp.max-attempts=5
auth.otp.expiration-minutes=5

# Logging Configuration
logging.config=classpath:log4j2.xml
