<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%15.15t] %-36.36logger{36} : %m%n%ex</Property>
        <Property name="LOG_DIR">./logs</Property>
    </Properties>

    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <!-- Rolling File Appender for general application logs -->
        <RollingFile name="FileAppender"
                     fileName="${LOG_DIR}/user-registration-api.log"
                     filePattern="${LOG_DIR}/user-registration-api-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>${LOG_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Structured JSON Appender for integration with external systems (Kafka, Event Hub, etc.) -->
        <!-- This writes to a separate file, but in a real system, it would be a Kafka or other network appender -->
        <RollingFile name="JsonAppender"
                     fileName="${LOG_DIR}/structured-log.json"
                     filePattern="${LOG_DIR}/structured-log-%d{yyyy-MM-dd}-%i.json.gz">
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}"/>
            </JsonLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.example.userregistration" level="info" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- This specific logger is used by our StructuredLogger service -->
        <Logger name="ExternalLogPublisher" level="info" additivity="false">
            <AppenderRef ref="JsonAppender"/>
        </Logger>

        <Root level="warn">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
