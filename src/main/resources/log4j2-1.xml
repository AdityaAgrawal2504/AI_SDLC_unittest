<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- Using a simple pattern for console readability -->
            <PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="File" fileName="logs/app.log">
            <!-- Using JsonLayout for structured logging to a file -->
            <!-- This layout is easily parsable by systems like Logstash, Fluentd, etc. -->
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}"/>
            </JsonLayout>
        </File>

        <!-- 
        Abstracted Kafka Appender example. 
        The actual implementation would require the log4j-kafka-appender dependency.
        This demonstrates how to integrate with external systems like Kafka.
        -->
        <!--
        <Kafka name="Kafka" topic="logs-topic">
