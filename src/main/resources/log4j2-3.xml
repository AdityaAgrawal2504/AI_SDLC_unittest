<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd'T'HH:mm:ss.SSS'Z'} %p %c{1.} [%t] %m%n</Property>
        <Property name="APP_LOG_ROOT">./logs</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>

        <RollingFile name="FileAppender"
                     fileName="${APP_LOG_ROOT}/auth-verify-otp.log"
                     filePattern="${APP_LOG_ROOT}/auth-verify-otp-%d{yyyy-MM-dd}-%i.log.gz">
            <!-- Log in JSON format for easy parsing by log management systems -->
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}"/>
            </JsonLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB"/>
                <TimeBasedTriggeringPolicy/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!--
        Example Appender for Kafka. Requires kafka-log4j2-appender dependency.
        This provides an abstracted way to send logs to Kafka.
        <Kafka name="KafkaAppender" topic="auth-logs">
            <PatternLayout pattern="${LOG_PATTERN}" />
            <Property name="bootstrap.servers">kafka-broker1:9092,kafka-broker2:9092</Property>
        </Kafka>
        -->

        <!--
        Example Appender for Azure Event Hub. Requires custom appender or specific library.
        This demonstrates the abstraction point.
        <EventHubAppender name="EventHubAppender">
            <ConnectionString>Endpoint=sb://.../</ConnectionString>
            <EventHubName>auth-logs-hub</EventHubName>
            <JsonLayout ... />
        </EventHubAppender>
        -->

    </Appenders>

    <Loggers>
        <Logger name="com.example.auth" level="info" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
            <!-- <AppenderRef ref="KafkaAppender"/> -->
            <!-- <AppenderRef ref="EventHubAppender"/> -->
        </Logger>

        <Root level="warn">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
