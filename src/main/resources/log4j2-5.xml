<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Console Appender for local development -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Structured File Appender for production -->
        <RollingFile name="File"
                     fileName="logs/conversation-history-api.log"
                     filePattern="logs/conversation-history-api-%d{yyyy-MM-dd}-%i.log.gz">
            <JsonLayout complete="false" compact="true" eventEol="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSS'Z'}" />
            </JsonLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <!-- Abstracted Appender for Kafka/Event Hub -->
        <!-- Example for Kafka. Similar appenders exist for other systems. -->
        <!--
        <Kafka name="Kafka" topic="log-topic">
            <PatternLayout pattern="%m" />
            <Property name="bootstrap.servers">kafka-broker:9092</Property>
        </Kafka>
        -->
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
            <!-- <AppenderRef ref="Kafka"/> -->
        </Root>

        <Logger name="com.example.conversation.history.fch01" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
